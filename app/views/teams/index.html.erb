<h1>Listing teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to 'Show', team_path(team.id) %></td>
        <td><%= link_to 'Edit', edit_team_path(team.id) %></td>
        <td><%= link_to 'Destroy', team_path(team.id), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

